                                <Style TargetType="Run">
                                    <Setter Property="Foreground" Value="Red"/>
                                    
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSaveSmaller}" Value="true">
                                            <Setter Property="Foreground" Value="LightGreen"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Run.Style>
                        </Run>
                            </TextBlock>

                        </StackPanel>
                    </DockPanel>

