<Page
    x:Class="UWP_UI_Project.Views.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_UI_Project.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}" x:Name="ContentArea">
        <StackPanel>
            <TextBlock FontSize="50" HorizontalAlignment="Center">ImageEngine</TextBlock>
            <TextBlock FontSize="30" HorizontalAlignment="Center">By KFreon</TextBlock>
            <TextBlock FontSize="20" Margin="20">
                <Run>This tool allows viewing and conversion of many image types, including dds.</Run>
                <LineBreak/>
                <Run>Zooming and side-by-side comparison is also supported.</Run>
                <LineBreak/>
                <Run>Start by clicking the "Load" button below or dragging an image onto the window.</Run>
            </TextBlock>
        </StackPanel>
        
        <Button x:Name="LoadButton" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" Padding="30 10 30 10" Click="LoadButton_Click">Load</Button>
    </Grid>
</Page>
